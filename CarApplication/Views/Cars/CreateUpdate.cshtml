@model CarApplication.Models.Car.CarCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <h4>Car</h4>
    <hr />
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="form-group row">
            <label asp-for="CarBrand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarBrand" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CarModel" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarModel" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CarYear" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarYear" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CarColor" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarColor" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CarPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CarPrice" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CreatedAt" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UpdatedAt" class="form-control" />
            </div>
        </div>

        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="cars" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary" value="Create" />
        }

        <a asp-action="index" class="btn btn-primary">Index</a>

    </form>
</div>
